<% if @festival %>
  <h1>Reviews for <%= @festival.name%> - <%= @festival.city%></h1>
<% else %>
  <h1>All the Reviews </h1>
<% end %>

<ul>
  <% @reviews.each do |review| %>

    <li>
      <%= review.festival.name%>: <%= link_to review.content, review_path(review)%> - <%= review.rating%>
    </li> <br>

  <% end %>
</ul>